---
import LabelBadge from "../atoms/LabelBadge.astro";

const legends = [
    { id: 1, text: "Synchronous Request Response", color: "blue" },
    { id: 2, text: "Asynchronous Request Response", color: "blue" },
    { id: 3, text: "Shared Data Communication", color: "blue" },
    { id: 4, text: "Event-Driven Communication", color: "blue" },
];
---

<div
    class="bg-gray-100 rounded-xl p-6 flex flex-col gap-3 h-full justify-center"
>
    {
        legends.map((item) => (
            <div class="flex items-center gap-3 bg-white p-3 rounded-lg shadow-sm">
                <span class="w-6 h-6 rounded-full bg-blue-600 text-white flex items-center justify-center text-xs font-bold">
                    {item.id}
                </span>
                <span class="font-medium text-gray-700 text-sm">
                    {item.text}
                </span>
            </div>
        ))
    }
</div>
