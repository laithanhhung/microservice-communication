---
import LabelBadge from "../atoms/LabelBadge.astro";

const legends = [
    { id: 1, text: "Synchronous Request Response", color: "blue" },
    { id: 2, text: "Asynchronous Request Response", color: "blue" },
    { id: 3, text: "Shared Data Communication", color: "blue" },
    { id: 4, text: "Event-Driven Communication", color: "blue" },
];
---

<div class="surface-card flex flex-col gap-3 h-full justify-center">
    {
        legends.map((item) => (
            <div class="flex items-center gap-3 bg-white/80 p-3 rounded-lg border border-slate-200">
                <span class="w-6 h-6 rounded-full bg-teal-500 text-white flex items-center justify-center text-xs font-bold">
                    {item.id}
                </span>
                <span class="font-medium text-slate-700 text-sm">
                    {item.text}
                </span>
            </div>
        ))
    }
</div>
