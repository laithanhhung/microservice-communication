---
interface Props {
    title: string;
    color?: "yellow" | "green" | "pink" | "blue" | "purple";
    classes?: string;
}

const { title, color = "blue", classes = "" } = Astro.props;

const colorStyles = {
    yellow: "bg-yellow-100 text-yellow-800 border-yellow-200",
    green: "bg-green-100 text-green-800 border-green-200",
    pink: "bg-pink-100 text-pink-800 border-pink-200",
    blue: "bg-blue-100 text-blue-800 border-blue-200",
    purple: "bg-purple-100 text-purple-800 border-purple-200",
};

const badgeStyle = colorStyles[color];
---

<div
    class={`relative bg-gray-50/50 rounded-xl border border-gray-200 p-8 pt-10 ${classes}`}
>
    <!-- Badge/Label -->
    <div
        class={`absolute -top-4 left-1/2 transform -translate-x-1/2 px-4 py-1.5 rounded-full text-sm font-bold shadow-sm border ${badgeStyle} z-10 whitespace-nowrap`}
    >
        {title}
    </div>

    <!-- Content -->
    <div
        class="w-full h-full flex flex-col items-center justify-center relative z-0"
    >
        <slot />
    </div>
</div>
