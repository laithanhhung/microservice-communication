---
interface Props {
    text: string;
    color: "yellow" | "green" | "pink" | "purple" | "blue";
    class?: string;
}

const { text, color, class: className = "" } = Astro.props;

const colorStyles = {
    yellow: "bg-amber-100 text-amber-800 border-amber-200",
    green: "bg-emerald-100 text-emerald-800 border-emerald-200",
    pink: "bg-rose-100 text-rose-800 border-rose-200",
    blue: "bg-sky-100 text-sky-800 border-sky-200",
    purple: "bg-teal-100 text-teal-800 border-teal-200",
};
---

<div
    class={`px-4 py-1.5 rounded-full text-sm font-bold shadow-sm border ${colorStyles[color]} whitespace-nowrap z-10 ${className}`}
>
    {text}
</div>
